<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title>Tabel Nilai Siswa</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 30px;
    }
    h2 {
      text-align: center;
    }
    table {
      border-collapse: collapse;
      width: 70%;
      margin: auto;
    }
    th, td {
      border: 1px solid black;
      padding: 8px;
      text-align: center;
    }
    th {
      background-color: #f2f2f2;
    }
  </style>
</head>
<body>
  <h2>TABEL NILAI SISWA</h2>
  <table id="tabelNilai">
    <tr>
      <th>NO</th>
      <th>NAMA SISWA</th>
      <th>TUGAS</th>
      <th>UTS</th>
      <th>UAS</th>
      <th>NA</th>
    </tr>
  </table>

  <script>
    // Data siswa dalam array
    const siswa = [
      { nama: "Asep", tugas: 80, uts: 95, uas: 85 },
      { nama: "Iwan", tugas: 75, uts: 75, uas: 90 },
      { nama: "Cepi", tugas: 70, uts: 80, uas: 90 },
      { nama: "Agus", tugas: 65, uts: 40, uas: 55 },
      { nama: "Dadang", tugas: 60, uts: 70, uas: 60 }
    ];

    // Fungsi hitung nilai akhir: 40% tugas + 30% uts + 30% uas
    function hitungNA(tugas, uts, uas) {
      return (0.4 * tugas) + (0.3 * uts) + (0.3 * uas);
    }

    // Tampilkan data ke tabel
    const tabel = document.getElementById("tabelNilai");
    siswa.forEach((s, index) => {
      const na = hitungNA(s.tugas, s.uts, s.uas).toFixed(1);
      const row = `
        <tr>
          <td>${index + 1}</td>
          <td>${s.nama}</td>
          <td>${s.tugas}</td>
          <td>${s.uts}</td>
          <td>${s.uas}</td>
          <td>${na}</td>
        </tr>
      `;
      tabel.innerHTML += row;
    });
  </script>
</body>
</html>
